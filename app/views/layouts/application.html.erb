<!DOCTYPE html>
<html lang='ja'>
  <head>
    <meta name='viewport' content='width=device-width, initial-scale=1, user-scalable=yes, maximum-scale=5'>
    <%= display_meta_tags(default_meta_tags) %>
    <%= favicon_link_tag('favicon.png') %>
    <%= favicon_link_tag('apple-touch-icon.png', { rel: 'apple-touch-icon', sizes: '180x180', type: 'image/png' }) %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css' %>
    <% if content_for?(:stylesheet) %>
      <%= yield :stylesheet %>
    <% else %>
      <%= stylesheet_link_tag 'application', "data-turbo-track": 'reload' %>
    <% end %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css2?family=Poppins&family=Noto+Sans+JP&display=swap' %>
    <%= javascript_include_tag 'application', "data-turbo-track": 'reload', defer: true %>
    <%= yield :javascript %>

    <!-- Google tag (gtag.js) -->
    <script>
      window.addEventListener('scroll', function loadGTM() {
        const script = document.createElement('script');
        script.src = 'https://www.googletagmanager.com/gtag/js?id=G-GEB5PLKSXC';
        script.async = true;
        document.head.appendChild(script);

        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-GEB5PLKSXC');

        window.removeEventListener('scroll', loadGTM);
      });
    </script>

    <!-- Google AdSense -->
    <%= javascript_include_tag 'https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7292276589292080',
                               async: true, crossorigin: 'anonymous' %>
    <meta name="google-adsense-account" content="ca-pub-7292276589292080">
  </head>

  <body>
    <%= render 'home/header' %>
    <%= render 'shared/flash' %>
    <main>
      <%= yield %>
    </main>
    <%= render 'home/footer' %>
  </body>
</html>
