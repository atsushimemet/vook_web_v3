<%= javascript_include_tag 'magazines/index', defer: true %>
<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'page/magazine' %>
<% end %>

<section class='magazine-section'>
  <%= render partial: 'shared/section_headline', locals: { number: '01', title: 'Magazine' } %>
  <div class='magazine-container container'>
    <div class='magazine-tab-container'>
      <div class='tab-content is-active'>
        <%= render 'magazines/card_list', magazines: @new_magazines %>
      </div>
      <div class='tab-content'>
        <%# @popular_magazinesができるまで@new_magazinesにしておく %>
        <%= render 'magazines/card_list', magazines: @new_magazines %>
      </div>
    </div>
    <% if admin_login? %>
      <div class='has-text-right mt-4'>
        <%= link_to 'New Magazine', new_magazine_path, class: 'button is-primary' %>
      </div>
    <% end %>
  </div>
</section>
