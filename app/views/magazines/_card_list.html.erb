<div class='magazine-cards columns is-mobile is-multiline'>
  <% magazines.each do |magazine| %>
    <div class='column is-one-quarter-tablet is-half-mobile'>
      <div class='magazine-card card'>
        <%= link_to magazine do %>
          <span class='magazine-date'>
            <%= l magazine.publish_at, format: :date %>
          </span>
          <div class='magazine-card-image image is-square'>
            <% if magazine.thumbnail.attached? %>
              <%= image_tag magazine.thumbnail.variant(resize_to_limit: [400, 400]) %>
            <% end %>
          </div>
          <div class='magazine-card-content'>
            <h3 class='magazine-card-header'>
              <%= magazine.title %>
            </h3>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
