<%= javascript_include_tag 'admin/show', defer: true %>
<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'page/admin' %>
<% end %>

<section class='admin-section'>
  <div class='mobile-contents'><%= render partial: 'menu' %></div>
  <%= render partial: 'shared/section_headline', locals: { title: 'Line' } %>
  <div class='layout-wrapper main-content'>
    <div class='container admin-container'>
      <%= render partial: 'table', locals: { models: @lines } %>
      <%= link_to 'New Line', new_line_path, class: 'button is-primary new-button' %>
      <%= render partial: 'shared/section_headline', locals: { title: 'Brand' } %>
      <%= render partial: 'table', locals: { models: @brands } %>
      <%= link_to 'New Brand', new_brand_path, class: 'button is-primary new-button' %>
      <%= render partial: 'shared/section_headline', locals: { title: 'Item' } %>
      <%= render partial: 'table', locals: { models: @items } %>
      <%= link_to 'New Item', new_item_path, class: 'button is-primary new-button' %>
    </div>
    <div class='sidebar'>
      <%= render partial: 'menu' %>
    </div>
  </div>
</section>
