<% products.each do |product| %>
  <tr onclick="window.open('<%= product.url %>')" class='product-link'>
    <td>
      <%= image_tag product.platform.image.variant(resize_to_limit: [400, 400]), class: 'pratform-image' %>
    </td>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
  </tr>
<% end %>
