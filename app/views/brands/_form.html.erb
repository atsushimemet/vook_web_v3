<section class='form-section'>
  <%= render 'shared/errors', object: @brand %>
  <%= form_with(model: brand, local: true) do |form| %>
    <div class='field'>
      <%= form.label :name, class: 'label' %>
      <div class='control'>
        <%= form.text_field :name, class: 'input' %>
      </div>
    </div>

    <div class='field'>
      <%= form.label :image, class: 'label' %>
      <div class='control'>
        <%= form.file_field :image %>
      </div>
    </div>

    <div class='field'>
      <%= form.label :banner, class: 'label' %>
      <div class='control'>
        <%= form.file_field :banner %>
      </div>
    </div>

    <div class='buttons is-right'>
      <%= form.submit class: 'button is-primary' %>
    </div>
  <% end %>
</section>
