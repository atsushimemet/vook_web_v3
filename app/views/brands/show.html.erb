<section class='knowledge-section'>
  <%= render partial: 'shared/section_headline', locals: { number: '00', title: 'Knowledge' } %>
  <div class='knowledge-container container'>
    <nav class='breadcrumb is-medium'>
      <ul>
        <li><%= link_to "##{@brand.name}", brand_path(@brand.name) %></li>
      </ul>
    </nav>
    <div class='knowledge-brand-header <%= @brand.name.gsub(/[.' ]/, '').downcase %>'>
      <% if @brand.banner.attached? %>
        <%= image_tag @brand.banner, alt: @brand.name, class: 'knowledge-banner' %>
      <% end %>
    </div>
    <%= render 'knowledges/card_list', objects: @brand.lines %>
    <%= link_to 'トップページに戻る', root_path %>
  </div>
</section>
