<section class='knowledge-section'>
  <%= render partial: 'shared/hero_banner', locals: { number: '00', title: 'Knowledge' } %>
  <div class='knowledge-container container'>
    <div class='knowledge-brand-item-header media'>
      <figure class='media-left'>
        <% if @brand.image %>
          <%= image_tag @brand.image.variant(resize_to_limit: [200, 200]), alt: @brand.name, class: 'image is-96x96' %>
        <% end %>
      </figure>
      <div class='media-content'>
        <h2 class='knowledge-title'>
          <%= @brand.name %>
        </h2>
      </div>
    </div>
    <%= render 'knowledges/card_list', objects: @brand.lines %>
    <%= link_to 'トップページに戻る', root_path %>
  </div>
</section>
