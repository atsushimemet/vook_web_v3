<%= javascript_include_tag 'brands/show', defer: true %>
<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'page/knowledge' %>
<% end %>

<section class='knowledge-section'>
  <%= render partial: 'shared/section_headline', locals: { number: '00', title: 'Knowledge' } %>
  <div class='knowledge-container container'>
    <nav class='breadcrumb-list'>
      <ul>
        <li>
          <%= link_to root_path do %>
            <i class='fa-solid fa-house'></i>
          <% end %>
        </li>
        <li><%= link_to @brand.name, brand_path(@brand.name) %></li>
      </ul>
    </nav>
    <div class='knowledge-brand-header' style="background-color: <%= @brand.color %>">
      <% if @brand.banner.attached? %>
        <%= image_tag @brand.banner, alt: @brand.name, class: 'knowledge-banner', width: 180, height: 120,
                                     loading: 'eager' %>
      <% end %>
    </div>
    <% if @brand.description.present? %>
      <div class='knowledge-description'>
        <%= @brand.description %>
      </div>
    <% end %>
    <%= render 'knowledges/card_list', objects: @lines %>
    <%= link_to 'トップページに戻る', root_path %>
  </div>
</section>
