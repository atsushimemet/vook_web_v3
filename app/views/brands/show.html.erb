<section class='knowledge-section'>
  <%= render partial: 'shared/hero_banner', locals: { number: '00', title: 'Knowledge' } %>
  <div class='knowledge-container container'>
    <div class='knowledge-brand-header <%= @brand.name.gsub(/[.' ]/, '').downcase %>'>
      <% if @brand.banner.attached? %>
        <%= image_tag @brand.banner.variant(resize_to_limit: [300, 100]), alt: @brand.name, class: 'knowledge-banner' %>
      <% end %>
    </div>
    <%= render 'knowledges/card_list', objects: @brand.lines %>
    <%= link_to 'トップページに戻る', root_path %>
  </div>
</section>
