<div class='hero is-small'>
  <div class='hero-body'>
    <div class='container'>
      <h1 class='hero-title'>
        <% if defined?(number) %>
          <span class='hero-title-number'>
            <%= number %>
          </span>
          <span class='hero-title-bar'>
            |
          </span>
          <%= title %>
        <% else %>
          <%= title %>
        <% end %>
      </h1>
    </div>
  </div>
</div>
