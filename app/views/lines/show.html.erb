<section>
  <%= render partial: 'shared/hero_banner', locals: { number: 0, title: 'Knowledge' } %>
  <div class='knowledge-section container'>
    <nav class='breadcrumb has-succeeds-separator is-medium'>
      <ul>
        <li><%= link_to @line.brand.name, brand_path(@line.brand.name) %></li>
        <li><%= link_to @line.item.name, item_path(@line.item.name) %></li>
      </ul>
    </nav>
    <div class='item-header is-vcentered'>
      <% if @line.image %>
        <figure>
          <%= image_tag @line.image.variant(resize_to_limit: [200, 200]), class: 'image is-96x96' %>
        </figure>
      <% end %>
      <h2 class='title knowledge-title'>
        <%= @line.name %>
      </h2>
    </div>
    <%= render 'knowledges/card_list', objects: @line.knowledges %>
    <%= link_to 'トップページに戻る', root_path %>
  </div>
</section>
